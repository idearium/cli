{
    "extends": ["@idearium/eslint-config", "plugin:prettier/recommended"],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "root": true,
    "rules": {
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "always-multiline",
                "exports": "always-multiline",
                "functions": "never"
            }
        ]
    }
}
